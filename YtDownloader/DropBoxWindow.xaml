<Window x:Class="YtDownloader.DropBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YtDownloader"
        mc:Ignorable="d"
        Title="" Height="64" Width="64" WindowStyle="None" AllowsTransparency="True" Topmost="True" Deactivated="Window_Deactivated" ShowInTaskbar="False">
    <Window.Background>
        <SolidColorBrush Opacity="0" Color="White"/>
    </Window.Background>
    <Grid >
        <Image Name="DropBox" Source="assets/dropbox.ico" ToolTip="Drag and drop video link here from your browser" Opacity="0.5" AllowDrop="True" PreviewDragOver="DropBox_PreviewDragOver" PreviewDrop="DropBox_PreviewDropAsync" MouseLeftButtonDown="DropBox_MouseLeftButtonDown" MouseEnter="DropBox_MouseEnter" MouseLeave="DropBox_MouseLeave"/>
    </Grid>
</Window>
